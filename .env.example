# =============================================================================
# SKALA Physical Risk AI - Backend SpringBoot 환경변수
# =============================================================================

# -----------------------------------------------------------------------------
# 서버 설정
# -----------------------------------------------------------------------------
# Spring Boot 서버 포트 (기본값: 8080)
SERVER_PORT=8080

# Spring 프로파일 (local, staging, prod)
SPRING_PROFILES_ACTIVE=prod

# -----------------------------------------------------------------------------
# 데이터베이스 설정 (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=skala_application
DB_USERNAME=skala_app_user
DB_PASSWORD=your-db-password

# -----------------------------------------------------------------------------
# JWT 설정
# -----------------------------------------------------------------------------
# 최소 256비트 (64자 이상) 필요
JWT_SECRET=your-secret-key-here-minimum-256-bits-long-for-hs256-algorithm

# -----------------------------------------------------------------------------
# FastAPI AI Agent 설정
# -----------------------------------------------------------------------------
# FastAPI 서버 URL (AI 분석 요청용)
FASTAPI_BASE_URL=http://localhost:8000
FASTAPI_API_KEY=your-fastapi-api-key

# -----------------------------------------------------------------------------
# CORS 설정 (프론트엔드 허용 도메인)
# -----------------------------------------------------------------------------
# 콤마로 구분하여 여러 도메인 허용 가능
# 예: http://localhost:3000,https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# -----------------------------------------------------------------------------
# GCP Artifact Registry 설정 (CI/CD용)
# -----------------------------------------------------------------------------
# CI/CD에서 Docker 이미지 푸시/풀에 사용
# GCP Service Account JSON 키 (전체 JSON 내용)
GCP_SA_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"..."}
# GCP 프로젝트 ID
GCP_PROJECT_ID=your-gcp-project-id
# Artifact Registry 리포지토리 이름
ARTIFACT_REGISTRY_REPO=your-artifact-registry-repo
# Artifact Registry 리전 (예: asia-northeast3)
ARTIFACT_REGISTRY_LOCATION=asia-northeast3

# -----------------------------------------------------------------------------
# 서버 배포 설정
# -----------------------------------------------------------------------------
# SSH 접속 정보 (CD workflow에서 사용)
SERVER_HOST=your-server-ip
SERVER_USER=ubuntu
SERVER_PORT=22
SERVER_SSH_KEY=your-private-ssh-key

# -----------------------------------------------------------------------------
# 메일 설정 (SendGrid)
# -----------------------------------------------------------------------------
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
